<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
<channel>
<title>{title}</title>
<description>Article Feed for {title}</description>
<link>{site_url}</link>
<atom:link href="{site_url}rss.xml" rel="self" type="application/rss+xml" />
<ttl>720</ttl>
{begin:blog escape:true,count:10}
<item>
<link>{site_url}{uri}</link>
<guid isPermaLink="{!:guid}false{else}true{end}">{!:guid}{uri}{else}{guid}{end}</guid>
<pubDate>{date.atom}</pubDate>
<title>{title}</title>
<description>{!:content_short}{content}{else}{content_short}{end}</description>
</item>
{end:blog}
</channel>
</rss>
